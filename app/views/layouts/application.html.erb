<!DOCTYPE html>
<html>
<head>
  <title>onDeck</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag    "print", :media => "print" %>
  <%= javascript_include_tag "application" %>

  <%= csrf_meta_tags %>
</head>
<body>
	

	<div class="flash">
		<% if flash[:msg] %>
			<div class="msg"><%= flash[:msg]%></div>
		<% end %>
	</div>
	
	<div class="header">
		<span class="header-text">Reflect </span>

	</div>
	

	<div class="shell">

	<div class="content">

		<div class="top-menu">
			<%= link_to "Home", "/" %> | 
			<%= link_to "Entries", "/entries" %> |
			<% if session[:is_admin]%> 
				<%= link_to "Topics", "/topics" %> | 
				<%= link_to "Users", "/users" %> | 
			<% end%>
			<%= link_to "Logout", "/logout" %>
		</div>
	
		<%= yield %>
	
	

	

	</div>

	<div class="footer">
		<p>Copyright 2012  
			<% if session.has_key? "email" %>
			| Logged in as <%= session[:email] %>
			<% end %>
		</p>
	</div>

</div>	

</body>
</html>
