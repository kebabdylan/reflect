
<h2>Please Login</h2>

<%= form_tag :action => "authenticate" do %>


<%= hidden_field_tag "goto", flash[:requested_url]%>

<p class="form-row">
  <%= label_tag :email, "Email: " %>
  <%= text_field_tag :email %>
</p>

<p class="form-row">
  <%= label_tag :password, "Password: "  %>
  <%= password_field_tag :password %>
</p>

<p class="form-row-submit">
  <%= submit_tag "Login" %>
</p>

<% end %>

