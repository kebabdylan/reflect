<h1>Welcome <%= @user.first_name%>!</h1>


<div class="panels">
	
	<div class="main">
		
		
		<h2>Entries you need to complete</h2>	
			<% @active_entries.each do |e| %>
				<p><%= e.topic.title %></p>
			<% end %>
			
			
			<h2>Recent Comments</h2>	
				<% @comments.each do |c| %>
				<p><%= c.content %></p>
				<% end %>	
	</div>
	
	<div class="side">
		<ul class="topic-list">
			<li>
				<h3><%= @user.first_name  %> <%= @user.last_name %></h3>
				<p>Email: <%= @user.email %>
			</li>
		</ul>
	</div>
	
</div>